<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:id="@+id/imageButton"
        android:background="@null"
        android:src="@drawable/logooo"
        android:layout_above="@+id/loginEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/border"
        android:textColor="#000000"
        android:hint="@string/username"
        android:id="@+id/loginEmail"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:maxLength="10"
        android:textColorLink="@android:color/black"
        android:textSize="25sp"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignRight="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin">
        <requestFocus />
    </EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/border"
        android:textColor="#000000"
        android:hint="@string/password"
        android:inputType="text"
        android:password="true"
        android:textColorLink="@android:color/black"
        android:textSize="25sp"
        android:id="@+id/loginPassword"
        android:layout_below="@+id/loginEmail"
        android:layout_alignLeft="@+id/loginEmail"
        android:layout_alignStart="@+id/loginEmail"
        android:layout_alignRight="@+id/loginEmail"
        android:layout_alignEnd="@+id/loginEmail" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="10dip"
        android:textColor="#e30000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/login_error"
        android:layout_below="@+id/loginPassword"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_alignStart="@+id/loginPassword"
        android:layout_alignRight="@+id/loginPassword"
        android:layout_alignEnd="@+id/loginPassword" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/btnLogin"
        android:background="@drawable/button"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_below="@+id/login_error"
        android:layout_centerHorizontal="true" />


</RelativeLayout>



